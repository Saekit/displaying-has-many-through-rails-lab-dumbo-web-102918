<h1>Dr. <%= @doctor.name %>'s Profile</h1>
<h3>Department: <%= @doctor.department %></h3>
<h3>Appointments:</h3>

<% @doctor.appointments.each do |app| %>
  <ul>
    <l1>Appointment with: <%= link_to app.patient.name, app.patient %> - <%= app.appointment_datetime.strftime("%B %d, %Y at %H:%M") %></li>
  </ul>
<% end %>
